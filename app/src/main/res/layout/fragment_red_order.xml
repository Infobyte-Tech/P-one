<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A3535050"
    tools:context=".red_order">

    <LinearLayout
        android:id="@+id/play_for_red"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/inc_dec_button"
        android:orientation="vertical"
        tools:context=".red_order">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#ff0000"
            android:padding="8dp"
            android:text="PLAY FOR RED"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="21dp"
            android:padding="11dp"
            android:text="Contract Money"
            android:textColor="@color/black"
            android:textSize="21dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/red_select_50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="50"
                    android:textSize="21dp" />

                <TextView
                    android:id="@+id/red_select_100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="100"
                    android:textSize="21dp" />

                <TextView
                    android:id="@+id/red_select_500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="500"
                    android:textSize="21dp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="21dp"
            android:padding="11dp"
            android:text="Number"
            android:textColor="@color/black"
            android:textSize="21dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/red_decrementButton"
                android:layout_width="32dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:background="@drawable/inc_dec_button"
                android:clickable="true"
                android:elevation="4dp"
                android:gravity="center"
                android:stateListAnimator="@null"
                android:text="-"
                android:textSize="28dp" />


            <TextView
                android:id="@+id/red_contract_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/red_incrementButton"
                android:layout_width="32dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:background="@drawable/inc_dec_button"
                android:clickable="true"
                android:elevation="4dp"
                android:gravity="center"
                android:stateListAnimator="@null"
                android:text="+"
                android:textSize="28sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="11dp"
                android:layout_marginLeft="32dp"
                android:text="Total Contract Money is "
                android:textColor="@color/black"
                android:textSize="21dp"

                />

            <TextView
                android:id="@+id/red_total_c_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="11dp"
                android:text="100"
                android:textSize="21dp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="18dp"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/red_cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="11dp"
                android:layout_marginLeft="180dp"
                android:text="CANCLE"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/red_confirm_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="11dp"
                android:text="CONFIRM"
                android:textColor="@color/black"
                android:textSize="16dp"
                />
        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
